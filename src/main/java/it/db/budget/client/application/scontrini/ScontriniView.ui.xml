<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:d="urn:import:org.gwtbootstrap3.demo.client.ui">

	<b:Panel>
		<b:PanelHeader>
			<b:Heading size="H3" text="Scontrino" />
		</b:PanelHeader>
		<b:PanelBody>
			<b:Form>
				<b:FieldSet>
					<b:FormGroup>
      					<b:FormLabel for="formDataSpesa">Data scontrino</b:FormLabel>
      					<b:TextBox placeholder="DD/MM/YYYY" b:id="formDataSpesa" ui:field="dataSpesaTB"/>
    				</b:FormGroup>
					<b:FormGroup>
      					<b:FormLabel for="formSupermercato">Supermercato</b:FormLabel>
      					<b:ListBox b:id="formSupermercato" ui:field="select"></b:ListBox>
    				</b:FormGroup>
    				<b:FormGroup>
      					<b:FormLabel for="formTotaleSpeso">Totale Speso</b:FormLabel>
      					<b:TextBox placeholder="" b:id="formTotaleSpeso" ui:field="totaleSpeso"/>
    				</b:FormGroup>
    				
    				
    				<b:Button type="PRIMARY" ui:field="salvaButton">Salva</b:Button>
    				<b:Container fluid="true" ui:field="prodottiContainer">
    					<b:Row>
    						<b:Column size="MD_2">
    							<b:FormGroup>
			      					<b:FormLabel for="formprodottiSpesa">Prodotto</b:FormLabel>
			      					<b:ListBox b:id="formprodottiSpesa" ui:field="prodottiSpesa"></b:ListBox>
			    				</b:FormGroup>
    						</b:Column>
    						<b:Column size="MD_2">
    							<b:FormGroup>
			      					<b:FormLabel for="formQuantita">Quantita'</b:FormLabel>
			      					<b:TextBox placeholder="" b:id="formQuantita" ui:field="quantitaTB"/>
			    				</b:FormGroup>
    						</b:Column>
    						<b:Column size="MD_2">
    							<b:FormGroup>
			      					<b:FormLabel for="formPrezzo">Prezzo</b:FormLabel>
			      					<b:TextBox placeholder="" b:id="formPrezzo" ui:field="prezzoTB"/>
			    				</b:FormGroup>
    						</b:Column>
    						<b:Column size="MD_2">
    							<b:FormGroup>
			      					<b:FormLabel for="formSconto">Sconto</b:FormLabel>
			      					<b:TextBox placeholder="" b:id="formSconto" ui:field="scontoTB"/>
			    				</b:FormGroup>
    						</b:Column>
    						<b:Column size="MD_2">
    							<b:FormGroup>
			      					<b:FormLabel for="formPrezzoFinale">Prezzo Finale</b:FormLabel>
			      					<b:TextBox placeholder="" b:id="formPrezzoFinale" ui:field="prezzoFinaleTB"/>
			    				</b:FormGroup>
    						</b:Column>
    						<b:Column size="MD_1" ui:field="colbottone">
    							<b:Button type="PRIMARY" icon="PLUS" ui:field="addProduct"/>	
    						</b:Column>
    					</b:Row>
    				</b:Container>

    				<b.gwt:CellTable bordered="true" condensed="true" striped="true" hover="true" height="20px" width="100%" ui:field="cellTable"/>
				</b:FieldSet>
			</b:Form>
			
		</b:PanelBody>
	</b:Panel>
</ui:UiBinder>
